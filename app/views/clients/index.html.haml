%h1 Listing clients

%table
  %thead
    %tr
      %th Name
      %th Last billed at
      %th Billing day
      %th
      %th
      %th

  %tbody
    - @clients.each do |client|
      %tr
        %td= client.name
        %td= client.last_billed_at
        %td= client.billing_day
        %td= link_to 'Show', client
        %td= link_to 'Edit', edit_client_path(client)
        %td= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }

